<% if logged_in? %>
  <h2 class="activity">Todays Activity</h2>
  <% current_user.todays_page.page_items.each do |item| %>
    <div class="post">
      <h2 class="title">
        Created <%= item.resource.class.to_s.downcase %>
        <%= item.resource.title if item.resource.title %>
      </h2>
      <div class="entry">
        <p><%= item_text(item.resource) %></p>
      </div>
      <div class="meta">
        <p class="links">
          <%= link_to "link thing", "#", :class => 'more' %>
          <%= link_to "think link", "#", :class => 'comments' %>
        </p>
      </div>
    </div>
  <% end %>
<% else %>
  <h1>Welcome#index</h1>
  <p>Find me in app/views/welcome/index.html.erb</p>
<% end %>