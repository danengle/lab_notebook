<h1>Welcome</h1>
<h5>Please sign up or login to access your lab notebook</h5>

<div id="login_form" class="welcome_page">
  <% form_tag session_path do -%>
    <fieldset>
      <legend>Current Users</legend>
      <span><%= label_tag 'login', "Login: " %>
      <%= text_field_tag 'login', @login %></span>
      
      <span id="password_span"><%= label_tag 'password', "Password: " %>
      <%= password_field_tag 'password', nil %></span>
      
      <span><%= submit_tag 'Log in' %></span>
    </fieldset>
  <% end -%>
</div>

<div id="signup_form" class="welcome_page">
  <%= error_messages_for :user %>
  <% form_for :user, :url => users_path do |f| -%>
    <fieldset>
      <legend>New Users</legend>
      <%= render :partial => 'users/form', :locals => { :f => f } %>
      
      <p><%= submit_tag 'Sign up' %></p>
    </fieldset>
  <% end -%>
</div>
